      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5/Home/lib/ext/sunpkcs11.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5/Home/../Classes/jconsole.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5.0/Home/lib/deploy.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5.0/Classes/dt.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5.0/Classes/jce.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5.0/Home/lib/plugin.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5.0/Home/lib/sa-jdi.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5.0/Classes/charsets.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5.0/Classes/classes.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5.0/Classes/jconsole.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5.0/Classes/jsse.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5.0/Classes/ui.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5.0/Home/lib/ext/apple_provider.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5.0/Home/lib/ext/dnsns.jar"/>
