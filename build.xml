      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5/Home/../Classes/classes.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5/Home/../Classes/jsse.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5/Home/../Classes/ui.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5/Home/lib/ext/apple_provider.jar"/>
      <include name="../../../../../Frameworks/JavaVM.framework/Versions/1.5/Home/lib/ext/dnsns.jar"/>
